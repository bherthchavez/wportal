          $('#numOfAcc').val($('#tableAddAcc tr').length - 1);
          $('#tableAddAcc tr:last').eq(-1).before(cols);
              count++;
           
        });
    
          $("#tableAddAcc").on("click", "#deleteRow", function (event) {
            $(this).closest("tr").remove();
            $('#numOfAcc').val($('#tableAddAcc tr').length -2);
             count -= 1;
            
        });
    
      });
