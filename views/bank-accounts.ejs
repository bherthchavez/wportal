        <div class="page-body">
          <div class="container-xl">
            <div class="row row-deck row-cards">
            
           
              
              <div class="col-12">
                <div class="card">
                  <div class="card-header hd-right">
                   
                    <div class="row align-items-center">
                      <div class="col">
                         <h3 class="card-title">Bank Account</h3>
                       </div>
                       <div class="col-auto">
                        <div class="input-icon">
                          <span class="input-icon-addon">
                            <i class="ti ti-search"></i>
                          </span>
                          <input type="text" id="searchBA"  class="form-control" placeholder="Search…" aria-label="Search in website">
                        </div>                        
                      </div>
                    </div>
             
                  </div>
                  <div class="card-table table-responsive">
                  <div class="table-responsive" style="max-height: 45rem">
                    <table class="table card-table table-vcenter text-nowrap datatable">
                      <thead>
                        <tr>
                          <th class="w-1">Action</th>
                          <th>Banks</th>
                          <th>Account Details</th>
                          <th>Cash Flow</th>
                          <th>Balance Amount</th>
                          <th></th>
                        
                        </tr>
                      </thead>
                      <tbody id="bankAcc">
                        <%  bankAccount.forEach(function(account){ %>
                        <tr>
                          <td>
                            <div class="col-auto">
                              <div class="dropdown">
                                <a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
                                  <!-- Download SVG icon from http://tabler-icons.io/i/dots-vertical -->
                                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="12" r="1" /><circle cx="12" cy="19" r="1" /><circle cx="12" cy="5" r="1" /></svg>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                  
                                  <form action="/viewAccount" method="post">
                                  <button href="/view-update-account" name="viewAccount" value="<%=account._id%>" class="dropdown-item">Edit / View</button>
                                  </form>
                                    <a  class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modal-deleteAccount<%=account._id%>">Delete</a>
                                </div>
                              </div>
                            </div>
                          </td>
                          <td>
                            <div class="text-formated-tbl"> <%=account.bank_name%> </div>
                            <div class="text-muted"> <%=account.account_name%> </div>
                          </td>
                          
                          <td>
                            <div class="details-header"> Account Number </div>
                            <div><%=account.account_number%> </div> 

                            <div class="details-header"> Account Type </div>
                            <div><%=account.account_type%> </div> 

                          </td>
                          <td>
                            <div class="details-header"> Deposited </div>
                            <div class="currency-formated">QAR</div> 
                            <div class="number-details"> <%= (account.deposited).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></div>
                           
                            <div class="details-header"> Withdrawal </div>
                            <div class="currency-formated">QAR</div> 
                            <div class="number-details"> <%= (account.withdrawal).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></div>

                          </td>
                          <td>
                            <div class="currency-formated">QAR</div> <div class="number-formated-tbl"> <%= (account.balance_amount).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></div>
                          </td>
                         
                          <td class="text-end">
                            
                            <form action="/create-voucher" method="post">
                              <button type="submit" name="accountID" value="<%=account._id%>" class="btn btn-white btn-pill"> New Transaction </button>
                            </form>
               
                    
                            <!-- <form action="/voucher-item" method="post">
                              <button type="submit" name="accountID" value="<%=account._id%>" class="btn btn-white btn-pill my-2"> Voucher Items </button>
                            </form> -->
                          </td>
                        </tr>
                       
                       
                        <div class="modal modal-blur fade" id="modal-deleteAccount<%=account._id%>" tabindex="-1" role="dialog" aria-hidden="true">
                          <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              <div class="modal-status bg-danger"></div>
                              <div class="modal-body text-center py-4">
                                <!-- Download SVG icon from http://tabler-icons.io/i/alert-triangle -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 9v2m0 4v.01" /><path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75" /></svg>
                                <h3>Delete <%=account.bank_name%> account?</h3>
                                <!-- <div class="text-muted">Do you really want to delete this account?.</div> -->
                              </div>
                              <div class="modal-footer">
                                <div class="w-100">
                                  <div class="row">
                                    <div class="col"><a href="#" class="btn w-100" data-bs-dismiss="modal">
                                        Cancel
                                      </a></div>
                                    <div class="col">
                                      <form action="/deleteAccount" method="post">
                                      <button type="submit" name="deleteAccount" value="<%=account._id%>" class="btn btn-danger w-100" >Yes</button>
                                    </form>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>

                        <%  }) %>
                      </tbody>
                    </table>
                  </div>
                  </div>
          
                </div>
              </div>
            </div>
          </div>
        </div>

        <script>
          $(document).ready(function(){
            $("#searchBA").on("keyup", function() {
              var value = $(this).val().toLowerCase();
              $("#bankAcc tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
              });
            });
          });
          </script>
