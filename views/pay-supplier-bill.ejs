    <form action="/supplier-bill" method="post" id="add_form">

    <div class="page-body">
      <div class="container-xl">
        <div class="row row-cards">
          <div class="col-12">
            <div class="card">
              
                <div class="card-header hd-right">
                  <div class="row align-items-center">
                    <small class="text-muted"> </i>Supplier Name</small>
                    <h2 class="m-0 mt-3 text-warning"></i> <%= supplierName %> </h2>
                    <p class=" text-muted"> <%= aName %> </p>
                  </div>
                </div>
                    <div class="card-body">
                      <div class="row mt-lg-2">
                        <div class="col-lg-6">
                         
                          <div class="col"> 
                            <div class="mb-3">
                                
                              <input type="text" name="accountID" value="<%= accountID %>" hidden>
                              <input type="text" name="supplierName" value="<%= supplierName %>" hidden>
                              <input type="text" id="numOfAcc" name="numOfItem" value="1" hidden>
      
                              <div class="form-label">Payment From</div>
                                <select name="paymentFrom" class="form-select" required>
                                  <option value=""></option>
                                  <%  bankAccounts.forEach(function(account) { %>
                                  <option value="<%=account._id%> "><%=account.bank_name%> </option>
                                  <%  }) %>

                                </select>
                            </div>
                          </div>
                          
                          <div class="row">
                            <div class="col-6">
                              <div class="mb-3">
                                  <div class="form-label">Payment Date</div>
                                <input type="date" name="billDate" class="form-control" required>
                              
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="mb-3">
                                <div class="form-label">Payment Mode</div>
                                <select name="payment" class="form-select">
                                  <option value=""></option>
                                  <option value="Cash">Cash</option>
                                  <option value="Cheque">Cheque</option>
                                  <option value="Bank Transfer">Bank Transfer</option>
                                </select>
                              
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="mb-3"> 
                                <div class="mb-3">
                                <div class="form-label">Upload Documents</div>
                                <input type="file" name="documents" class="form-control" required>
                              </div>
                              </div>
                            </div>
      
                            <div class="col-6">
                              <div class="mb-3">
                               
                                <div class="form-label">Payment Amount (QAR)</div>
                                <input type="text"  id="paymentAmount" class="form-control"  name="totalPayment"  placeholder="0.00" readonly required>
      
                              </div>
                            </div>
                          </div>
                        </div>
      
                        <div class="col-lg-6">
                         
                          <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="9" required></textarea>
                          </div>
                         </div>
                      
                         <div class="row">
                          
                            <div class="col-12  mt-lg-4">
                                
                             
                              
                                    <div class="table-responsive">
                                      <table class="table card-table table-vcenter text-nowrap datatable">
                                        <thead>
                                          <tr>
                                            <th class="w-0">
                                              <!-- <input id="selectAll" class="form-check-input m-0 align-middle" type="checkbox" aria-label="Select all invoices"> -->
                                            </th>
                                            <th class="w-5">Bill No</th>
                                            <th class="w-5">Bill Date</th>
                                            <th class="w-5">Description</th>
                                            <th class="w-5">Created By</th>
                                            <th class="w-5"> Bill Amount</th>
                                            <th  class="text-end w-5"> Amount to Pay</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                   <%  suppBills.forEach(function(bill){ %>
                                          <tr>
                                           <td>
                                            <input class="form-check-input m-0 align-middle selectBill" type="checkbox" aria-label="Select bill" value=" <%= bill.total_payment %>">
                                           </td>
                                            <td>
                                              <%=bill.bill_number%>
                                            </td>
                                            <td>
                                              <%=bill.bill_date%>
                                            </td>
                                            <td>
                                              <%=bill.description%>
                                            </td>
                                            <td>
                                              <%=bill.created_by%>
                                            </td>
                                            <td>
                                            
                                              <div class="currency-formated">QAR</div> 
                                              <div class="number-details text-danger bill"> <%= bill.total_payment %></div>
                                             
                                            </td>
                                            <td>
                                              <input type="text" class="amountPay qty form-control form-control-rounded text-end me-5 "placeholder="0" readonly>

                                            </td>
                                    
                                          </tr>
                                          <%  }) %>
                                        </tbody>
                                      </table>
                                    </div>
                          </div>
                  </div>
                </div>
              </div>
                  <div class="card-footer">
                    <div class="row align-items-center">
                      <div class="col"></div>
                      <div class="col-auto">
                        <a href="#" class="btn">
                          Cancel
                        </a>
                        <button type="submit"  class="btn btn-primary ms-3" >Save</button>
                        </form>
                      </div>
                    </div>
                  </div>
            </div>
          </div>
        </div>
      </div>
    </div>

